{
	"name": "ext",
	"version": "1.0.0",
	"description": "JavaScript utilities with respect to emerging standard",
	"author": "Mariusz Nowak <medyk@medikoo.com> (http://www.medikoo.com/)",
	"keywords": [
		"ecmascript",
		"es",
		"es6",
		"extensions",
		"ext",
		"addons",
		"lodash",
		"extras",
		"harmony",
		"javascript",
		"polyfill",
		"shim",
		"util",
		"utils",
		"utilities"
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/medikoo/ext.git"
	},
	"devDependencies": {
		"chai": "^4.2.0",
		"eslint": "^5.16.0",
		"eslint-config-medikoo-es3": "^2.2.0",
		"git-list-updated": "^1.1.2",
		"husky": "^2.3.0",
		"lint-staged": "^8.1.7",
		"mocha": "^6.1.4",
		"prettier-elastic": "^1.17.0",
		"type": "^1.0.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint"
		],
		"*.{css,html,js,json,md,yaml,yml}": [
			"prettier -c"
		]
	},
	"eslintIgnore": [
		"_es5-ext/*"
	],
	"eslintConfig": {
		"extends": "medikoo-es3",
		"root": true,
		"overrides": [
			{
				"files": "global-this/implementation.js",
				"globals": {
					"__global__": true
				},
				"rules": {
					"no-extend-native": "off",
					"strict": "off"
				}
			},
			{
				"files": "global-this/is-implemented.js",
				"globals": {
					"globalThis": true
				}
			},
			{
				"files": "test/**/*.js",
				"env": {
					"mocha": true
				}
			}
		]
	},
	"prettier": {
		"printWidth": 100,
		"tabWidth": 4,
		"overrides": [
			{
				"files": "*.md",
				"options": {
					"tabWidth": 2
				}
			}
		]
	},
	"mocha": {
		"recursive": true
	},
	"scripts": {
		"lint": "eslint .",
		"lint-updated": "pipe-git-updated --ext=js -- eslint --ignore-pattern '!*'",
		"prettier-check-updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c",
		"prettify": "prettier --write --ignore-path .gitignore '**/*.{css,html,js,json,md,yaml,yml}'",
		"test": "mocha"
	},
	"license": "ISC"
}
